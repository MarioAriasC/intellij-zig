<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>ZigLang</name>
    <vendor>ZigLang</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.ziglang.template.services.MyApplicationService"/>
        <projectService serviceImplementation="org.ziglang.template.services.MyProjectService"/>
        <fileType name="ZigLang" implementationClass="org.ziglang.ZigFileType"
                  fieldName="INSTANCE" language="ZigLang" extensions="ziglang"/>
        <lang.parserDefinition language="ZigLang"
                               implementationClass="org.ziglang.ZigParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="ZigLang"
                implementationClass="org.ziglang.ZigLangSyntaxHighlighterFactory"/>
        <completion.contributor language="ZigLang"
                                implementationClass="org.ziglang.ZigLangCompletionContributor"/>
    </extensions>

    <applicationListeners>
        <listener class="org.ziglang.template.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
