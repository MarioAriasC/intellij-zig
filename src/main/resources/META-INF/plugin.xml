<idea-plugin>
    <id>org.ziglang</id>
    <name>ZigLang</name>
    <vendor>intellij-zig</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="ZigLang" implementationClass="org.ziglang.ZigFileType"
                  fieldName="INSTANCE" language="ZigLang" extensions="zig"/>
        <lang.parserDefinition language="ZigLang"
                               implementationClass="org.ziglang.ZigParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="ZigLang"
                implementationClass="org.ziglang.ZigLangSyntaxHighlighterFactory"/>
        <completion.contributor language="ZigLang"
                                implementationClass="org.ziglang.ZigLangCompletionContributor"/>

        <programRunner implementation="org.ziglang.runner.ZigRunner"/>
        <configurationType implementation="org.ziglang.runner.ZigRunnerConfigType"/>

    </extensions>
</idea-plugin>
