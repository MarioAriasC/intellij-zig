<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>ZigLang</name>
    <vendor>ZigLang</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.ziglang.plugins.template.services.MyApplicationService"/>
        <projectService serviceImplementation="org.ziglang.plugins.template.services.MyProjectService"/>
        <fileType name="ZigLang File" implementationClass="org.ziglang.plugins.lang.ZigFileType"
                  fieldName="INSTANCE" language="ZigLang" extensions="ziglang"/>
    </extensions>

    <applicationListeners>
        <listener class="org.ziglang.plugins.template.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
